@model IEnumerable<Ejemplo_importante.datos.Dto.CustomerDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lista de Clientes</title>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="customer-container">
        <h2 class="customer-title">Lista de Clientes</h2>

        <div class="action-link">
            @Html.ActionLink("Crear Nuevo Cliente", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped table-hover category-table">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
        <tr>
            <td>@customer.CustomerId</td>
            <td>@customer.FullName</td>
            <td>@customer.Email</td>
            <td>@customer.Phone</td>
            <td class="action-buttons">
                @Html.ActionLink("Detalles", "Details", new { id = customer.CustomerId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Editar", "Edit", new { id = customer.CustomerId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = customer.CustomerId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
            </tbody>
        </table>
    </div>
</body>
</html>