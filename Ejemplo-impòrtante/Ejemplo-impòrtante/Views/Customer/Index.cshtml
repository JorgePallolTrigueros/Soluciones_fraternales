@model IEnumerable<Ejemplo_importante.datos.Dto.CustomerDto>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Lista de Clientes</title>
    <link rel="stylesheet" href="~/Content/css/style3.css" />
</head>
<body class="customer-body">
    <div class="customer-container">
        <h2 class="customer-title">Lista de Clientes</h2>

        <div class="customer-action">
            @Html.ActionLink("➕ Crear Nuevo Cliente", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table class="customer-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.FullName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td class="customer-actions">
                            <a href="@Url.Action("Details", "Customer", new { id = customer.CustomerId })" class="btn btn-info">📄 Detalles</a>
                            <a href="@Url.Action("Edit", "Customer", new { id = customer.CustomerId })" class="btn btn-warning">✏️ Editar</a>
                            <a href="@Url.Action("Delete", "Customer", new { id = customer.CustomerId })" class="btn btn-danger">🗑 Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
