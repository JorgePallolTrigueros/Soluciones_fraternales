@model Ejemplo_importante.datos.Dto.CustomerDto
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Detalles del Cliente</title>
    <link rel="stylesheet" href="~/Content/css/style3.css" />
</head>
<body class="customer-body">
    <div class="customer-container">
        <h2 class="customer-title">Detalles del Cliente</h2>

        <div class="customer-details">
            <h4 class="customer-subtitle">Información del Cliente</h4>
            <hr />
            <div class="customer-info">
                <p><strong>ID:</strong> @Model.CustomerId</p>
                <p><strong>Nombre Completo:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Teléfono:</strong> @Model.Phone</p>
            </div>
        </div>

        <div class="form-actions">
            <a href="@Url.Action("Edit", "Customer", new { id = Model.CustomerId })" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</body>
</html>
