@model Ejemplo_importante.datos.Dto.CustomerDto
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lista de Clientes</title>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h2>Detalles del Cliente</h2>

    <div>
        <h4>Cliente</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.CustomerId</dd>

            <dt>Nombre Completo</dt>
            <dd>@Model.FullName</dd>

            <dt>Email</dt>
            <dd>@Model.Email</dd>

            <dt>Teléfono</dt>
            <dd>@Model.Phone</dd>
        </dl>
    </div>

    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.CustomerId }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-default" })
    </p>
</body>
</html>