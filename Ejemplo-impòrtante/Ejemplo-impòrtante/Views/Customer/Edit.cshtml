@model Ejemplo_importante.datos.Dto.CustomerDto
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar Cliente</title>
    <link rel="stylesheet" href="~/Content/css/style3.css" />
</head>
<body class="customer-body">
    <div class="customer-container">
        <h2 class="customer-title">Editar Cliente</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="customer-form">
                <h4 class="customer-subtitle">Información del Cliente</h4>
                <hr />
                @Html.HiddenFor(model => model.CustomerId)

                <div class="customer-group">
                    @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "customer-label" })
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "customer-input" } })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "customer-error" })
                </div>

                <div class="customer-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "customer-label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "customer-input" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "customer-error" })
                </div>

                <div class="customer-group">
                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "customer-label" })
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "customer-input" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "customer-error" })
                </div>

                <div class="customer-actions">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        }
    </div>
</body>
</html>
