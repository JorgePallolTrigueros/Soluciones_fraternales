@model IEnumerable<Ejemplo_importante.datos.Dto.CategoryDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lista de Categorías</title>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="category-container">
        <h2 class="category-title">Lista de Categorías</h2>

        <div class="action-link">
            @Html.ActionLink("Crear Nueva Categoría", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped table-hover category-table">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
    <tr>
        <td>@category.CategoryId</td>
        <td>@category.CategoryName</td>
        <td>@category.Description</td>
        <td class="action-buttons">
            @Html.ActionLink("Detalles", "Details", new { id = category.CategoryId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Editar", "Edit", new { id = category.CategoryId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = category.CategoryId }, new { @class = "btn btn-danger" })
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</body>
</html>