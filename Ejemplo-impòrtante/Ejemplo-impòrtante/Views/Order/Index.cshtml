@model IEnumerable<Ejemplo_importante.datos.Dto.OrderDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lista de Órdenes</title>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="order-container">
        <h2>Lista de Órdenes</h2>

        <div class="action-link">
            @Html.ActionLink("Crear Nueva Orden", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped table-hover order-table">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Fecha de Orden</th>
                    <th>Monto Total</th>
                    <th>Cliente</th> <!-- Incluye el nombre del cliente -->
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
    <tr>
        <td>@order.OrderId</td>
        <td>@order.OrderDate.ToShortDateString()</td>
        <td>@order.TotalAmount</td>
        <td>@order.CustomerName</td> <!-- Muestra el nombre del cliente -->
        <td class="action-buttons">
            @Html.ActionLink("Detalles", "Details", new { id = order.OrderId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Editar", "Edit", new { id = order.OrderId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = order.OrderId }, new { @class = "btn btn-danger" })
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</body>
</html>