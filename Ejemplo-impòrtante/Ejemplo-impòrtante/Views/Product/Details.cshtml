@using Ejemplo_importante.datos.Dto
@model ProductDto
<div class="modal-header">
    <h5 class="modal-title">Detalles del Producto</h5>
    <button type="button" class="close" onclick="modalManager.closeModal()">&times;</button>
</div>

<div class="modal-body">
    <div id="messageBox" class="alert d-none"></div> <!-- Mensaje de error/success -->

    <div id="productDetails" class="fetch-card">
        <h4>Producto</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.ProductId</dd>

            <dt>Nombre</dt>
            <dd>@Model.ProductName</dd>

            <dt>Precio</dt>
            <dd>@Model.Price</dd>

            <dt>Categoría</dt>
            <dd>@(Model.CategoryName ?? Model.CategoryId.ToString())</dd>
        </dl>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" onclick="modalManager.closeModal()">Cerrar</button>
    <button type="button" class="btn btn-primary" onclick="openEditModal(@Model.ProductId)">Editar</button>
</div>

<script>
    function openEditModal(productId) {
        modalManager.openModal({ tipo: "Edit", datosModal: { ProductId: productId } });
    }
</script>
