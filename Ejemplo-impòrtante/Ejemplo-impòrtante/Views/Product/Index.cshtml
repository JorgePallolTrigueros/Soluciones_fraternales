@model IEnumerable<Ejemplo_importante.datos.Dto.ProductDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lista de Productos</title>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="product-container">
        <h2 class="product-title">Lista de Productos</h2>

        <div class="action-link">
            @Html.ActionLink("Crear Nuevo Producto", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped table-hover category-table">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Categoría</th> <!-- Nueva columna para la categoría -->
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
    <tr>
        <td>@product.ProductId</td>
        <td>@product.ProductName</td>
        <td>@product.Price</td>
        <td>@product.CategoryName</td> <!-- Muestra el nombre de la categoría -->
        <td class="action-buttons">
            @Html.ActionLink("Detalles", "Details", new { id = product.ProductId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Editar", "Edit", new { id = product.ProductId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = product.ProductId }, new { @class = "btn btn-danger" })
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</body>
</html>